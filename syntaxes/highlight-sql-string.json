{
    "scopeName": "string-sql.injection",
    "name": "source.stringcode",
    "injectionSelector": "L:source - (source.stringcode, meta.embedded) ",
    "repository": {
        "keep-variable": {
            "patterns": [
                {
                    "begin": "(\\{)",
                    "end": "(\\})",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.section.embedded.begin"
                        }
                    },
                    "endCaptures": {
                        "1": {
                            "name": "punctuation.section.embedded.end"
                        }
                    },
                    "contentName": "variable"
                }
            ]
        },
        "keep-variables": {
            "patterns": [
                {
                    "begin": "(`|'|\")",
                    "end": "(`|'|\")",
                    "captures": {
                        "1": {
                            "name": "string.quoted"
                        }
                    },
                    "patterns": [
                        {
                            "include": "string.quoted"
                        },
                        {
                            "include": "#keep-variable"
                        }
                    ],
                    "contentName": "string.quoted"
                },
                {
                    "include": "#keep-variable"
                }
            ]
        }
    },
    "patterns": [
        {
            "begin": "(--(sql).*)",
            "beginCaptures": {
                "1": {
                    "name": "comment.line.double-dash.sql"
                },
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "(;)",
            "endCaptures": {
                "1": {
                    "name": "meta.embedded"
                }
            },
            "patterns": [
                {
                    "include": "#keep-variables"
                },
                {
                    "include": "source.sql"
                }
            ],
            "contentName": "meta.embedded"
        },
        {
            "begin": "(--(beginsql|begin-sql).*)",
            "end": "(--(endsql|end-sql))",
            "captures": {
                "1": {
                    "name": "comment.line.double-dash.sql"
                },
                "2": {
                    "name": "entity.name.function"
                }
            },
            "patterns": [
                {
                    "include": "#keep-variables"
                },
                {
                    "match": "(;)",
                    "captures": {
                        "1": {
                            "name": "meta.embedded"
                        }
                    }
                },
                {
                    "include": "source.sql"
                }
            ],
            "contentName": "meta.embedded"
        },
        {
            "begin": "(SELECT|INSERT|DELETE|UPDATE|DROP|ALTER|CREATE|SET|TRUNCATE|GRANT|REVOKE)\\s",
            "end": "(;)",
            "beginCaptures": {
                "1": {
                    "name": "keyword.other.DML.sql"
                }
            },
            "endCaptures": {
                "1": {
                    "name": "meta.embedded"
                }
            },
            "patterns": [
                {
                    "include": "#keep-variables"
                },
                {
                    "include": "source.sql"
                }
            ],
            "contentName": "source.stringcode, meta.embedded"
        }
    ]
}